{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "standard"
  ],
  "env": {
    "jest": true
  },
  "plugins": [
    "flowtype-errors"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "flowtype-errors/show-errors": 2,
    "no-console": 0,
    "no-undef": 0,
    "indent": [
      2,
      2
    ]
  },
  "globals": {
    "fetch": true,
    "enquire": true,
    "FontFaceObserver": true,
    "imagesloaded": true,
    "Modernizr": true
  }
}